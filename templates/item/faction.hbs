<form class="{{cssClass}}" autocomplete="off">
    {{> "fs4.item-header" item=item itemType=itemType }}

    <div class="span">
        <em>{{ localize "fs4.itemTypes.class" }} :</em> {{ localize (concat "fs4.classes." system.class) }}
    </div>

    <div class="form group">
        <div class="form-fields">
            {{editor
                description
                engine="prosemirror"
                target="system.description"
                button=true
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.characteristics" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            <ul>
                {{#each characteristics}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.skills" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            <ul>
                {{#each skills}}
