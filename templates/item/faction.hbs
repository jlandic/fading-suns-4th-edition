<div class="scrollable tab-main">
    <div class="span">
        <em>{{ localize "TYPES.Item.class" }} :</em>
        {{#if system.class}}
            {{ localize (concat "fs4.class." system.class.system.id) }}
        {{else}}
            {{ localize "fs4.class.unknown" }}
        {{/if}}
    </div>

    {{> "fs4.description" description=description}}

    <h2>{{ localize "fs4.character.fields.characteristics" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            <ul>
                {{#each characteristics}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.skills" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            <ul>
                {{#each skills}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.capabilities" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            <ul>
                {{#each system.capabilities}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.perk" }}</h2>
    <div class="form group">
        <div class="form-fields">
            {{> "fs4.editor"
                name="system.perk"
                value=perk
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.character.fields.equipment" }}</h2>
    <div class="form group">
        <div class="form-fields">
            {{> "fs4.editor"
                name="system.equipment"
                value=equipment
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.faction.fields.blessing" }}</h2>
    <div class="form group">
        <div class="form-fields">
            {{> "fs4.editor"
                name="system.blessing"
                value=blessing
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.faction.fields.curse" }}</h2>
    <div class="form group">
        <div class="form-fields">
            {{> "fs4.editor"
                name="system.curse"
                value=curse
            }}
        </div>
    </div>
</div>
