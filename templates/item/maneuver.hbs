<form class="{{cssClass}}" autocomplete="off">
    {{> "fs4.sheet-header" document=item documentType=itemType }}

    <div class="form-group">
        <div class="form-fields">
            <select name="system.characteristic">
                {{selectOptions
                    characteristics
                    selected=system.characteristic
                    nameAttr="value"
                    labelAttr="name"
                }}
            </select>

            <select name="system.skill">
                {{selectOptions
                    skills
                    selected=system.skill
                    nameAttr="value"
                    labelAttr="name"
                }}
            </select>

            <select name="system.time">
                {{selectOptions
                    times
                    selected=system.time
                    nameAttr="value"
                    labelAttr="name"
                }}
            </select>
        </div>
    </div>

    <h2>{{ localize "fs4.fields.description" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            {{editor
                description
                engine="prosemirror"
                target="system.description"
                button=true
            }}
        </div>
    </div>

    <h3>{{ localize "fs4.maneuvers.fields.time" }}</h3>
    <div class="form-group">
        <div class="form-fields">
            {{editor
                timeDescription
                engine="prosemirror"
                target="system.timeDescription"
                button=true
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.maneuvers.fields.capability" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            {{editor
                capability
                engine="prosemirror"
                target="system.capability"
                button=true
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.maneuvers.fields.resistance" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            {{editor
                resistance
                engine="prosemirror"
                target="system.resistance"
                button=true
            }}
        </div>
    </div>

    <h2>{{ localize "fs4.maneuvers.fields.impact" }}</h2>
    <div class="form-group">
        <div class="form-fields">
            {{editor
                impact
                engine="prosemirror"
                target="system.impact"
                button=true
            }}
        </div>
    </div>
</form>
