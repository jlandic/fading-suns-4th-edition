<form class="{{cssClass}}" autocomplete="off">
    {{> "fs4.sheet-header" document=item documentType=itemType }}

    <div class="form-group">
        <div class="form-fields">
            <span>
                <em>{{ localize "fs4.species.fields.size" }}:</em> {{system.size}}
            </span>

            <span>
                <em title="{{ localize " fs4.species.fields.speedHint"
                    }}">{{ localize "fs4.species.fields.speed" }}:</em>
                <span title="{{ localize " fs4.species.fields.threeSpeedsHint" }}">{{speed}}</span>
            </span>
        </div>
    </div>

    <div class="form group">
        <div class="form-fields">
            {{editor
                description
                engine="prosemirror"
                target="system.description"
                button=true
            }}
        </div>
    </div>
</form>