<ol class="items-list">
    {{#each maneuvers as |maneuver id|}}
        <li class="item flexrow">
            <img class="rollable draggable"
                data-item-id="{{maneuver.id}}"
                data-action="{{../action}}"
                data-draggable-type="{{../itemType}}"
                src="{{maneuver.img}}"
                title="{{ localize (concat "fs4.sheets." action) }}"
            />
            <div class="item-name">
                <h6 class="item-control item-edit" data-action="editItem" data-item-id="{{maneuver.id}}">{{maneuver.name}}</h6>
            </div>

            <div>
                {{#if maneuver.validStats}}
                    {{ localize (concat "fs4.skills." maneuver.system.skill) }} + {{ localize (concat "fs4.characteristics." maneuver.system.characteristic) }}
                    &nbsp;({{ maneuver.goal }})
                {{else}}
                    -
                {{/if}}
            </div>

            <div class="item-controls flex0">
                <div class="flexrow flexnowrap">
                    <a class="item-control item-edit"
                        title="{{ localize "fs4.sheets.edit" }}"
                        data-action="editItem"
                        data-item-id="{{maneuver.id}}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>

                    <a class="item-control item-delete"
                        title="{{ localize "fs4.sheets.delete" }}"
                        data-action="removeItem"
                        data-item-id="{{maneuver.id}}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        </li>
    {{/each}}
</ol>
