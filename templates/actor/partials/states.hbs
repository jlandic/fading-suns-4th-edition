<ol class="items-list">
    {{#each states as |state id|}}
        <li class="item flexrow">
            <img src="{{state.img}}" />
            <div class="item-name">
                <h6 class="item-control item-edit" data-action="editItem" data-item-id="{{state.id}}">{{state.name}}</h6>
            </div>

            <div>
                {{localize (concat "fs4.state.types." state.system.type)}}
            </div>

            <div class="item-controls flex0">
                <div class="flexrow flexnowrap">
                    <a class="item-control item-edit"
                        title="{{ localize "fs4.sheets.edit" }}"
                        data-action="editItem"
                        data-item-id="{{state.id}}"
                    >
                        <i class="fas fa-edit"></i>
                    </a>

                    <a class="item-control item-delete"
                        title="{{ localize "fs4.sheets.delete" }}"
                        data-action="removeState"
                        data-item-id="{{state.id}}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        </li>
    {{/each}}
</ol>
