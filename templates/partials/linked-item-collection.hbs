<ol class="items-list collection">
    {{#each collection}}
        <li class="item flexrow">
            <div class="item-name">
                <h5 data-action="editItem" data-item-id="{{this.identifier}}">{{this.name}}</h5>
            </div>

            {{#if ../withDescription}}
            <div class="flex3">
                {{{this.description}}}
            </div>
            {{/if}}

            <div class="item-controls flex0">
                <div class="flexrow flexnowrap">
                    <a class="item-control item-show"
                        title="{{ localize "fs4.sheets.show" }}"
                        data-action="editItem"
                        data-item-id="{{this.identifier}}"
                    >
                        <i class="fas fa-book"></i>
                    </a>

                    <a class="item-control item-delete"
                        title="{{ localize "fs4.sheets.delete" }}"
                        data-action="deleteItem"
                        data-collection="{{../collectionName}}"
                        data-item-id="{{this.identifier}}"
                    >
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        </li>
    {{/each}}
</ol>
