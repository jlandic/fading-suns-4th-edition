<ol class="items-list collection" data-collection-name="{{collectionName}}">
    {{#each collection}}
        <li class="item flexrow" data-id="{{this.id}}">
            <div class="item-name">
                <h4>{{this.name}}</h4>
            </div>

            {{#if this.description}}
            <div class="flex3">
                {{{this.description}}}
            </div>
            {{/if}}

            <div class="item-controls flex0">
                <div class="flexrow flexnowrap">
                    <a class="item-control item-show" title="{{ localize "fs4.sheets.show" }}">
                        <i class="fas fa-book"></i>
                    </a>

                    <a class="item-control item-delete" title="{{ localize "fs4.sheets.delete" }}">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        </li>
    {{/each}}
</ol>
